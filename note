#!/usr/bin/env bash

DURATION=$1
shift
NOTE=$1
shift

A_CHROMATIC_SCALE=(220 233.08 246.94 261.63 277.18 293.66 311.13 329.63 349.23 369.99 392.00 415.30 440.00)

A_MINOR_SCALE=(220 246.94 261.63 293.66 329.63 349.23 392.00 440.00)

C_MAJOR_SCALE=(261.63 293.66 329.63 349.23 392.00 440.00 493.88 523.25)

#SCALE=("${C_MAJOR_SCALE[@]}")
#SCALE=("${A_MINOR_SCALE[@]}")
SCALE=("${A_CHROMATIC_SCALE[@]}")

/usr/local/bin/play -n synth $DURATION square ${SCALE[$((NOTE - 1))]} vol 0.1
